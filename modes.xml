<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- uum → rus -->

  <mode name="uum-rus" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="uum-rus.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="uum-rus.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="uum-rus.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="uum-rus.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="uum-rus.autolex.bin"/>
      </program>


      <program name="rtx-proc">
        <file name="uum-rus.rtx.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="uum-rus.autogen.bin"/>
      </program>
      <program name="lt-proc -p">
        <file name="uum-rus.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>

  <!-- rus → uum -->

  <mode name="rus-uum" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="rus-uum.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="rus-uum.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="rus-uum.prob"/>
      </program>

      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="rus-uum.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="rus-uum.autolex.bin"/>
      </program>


      <program name="rtx-proc">
        <file name="rus-uum.rtx.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="rus-uum.autogen.bin"/>
      </program>
      <program name="lt-proc -p">
        <file name="rus-uum.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>

